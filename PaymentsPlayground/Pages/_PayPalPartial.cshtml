@{
}
@model PayPalPaymentForm

<div class="modal fade" id="add-contact" tabindex="-1" role="dialog" aria-labelledby="addContactLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" >Paypal</h5>
                <button type="button" data-toggle="close-modal" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            
            <div class="modal-body">
            <form method="POST" accept-charset="utf-8" class="payform" action="https://www.sandbox.paypal.com/cgi-bin/webscr">
		        <input type="hidden" name="cmd" asp-for="Cmd">
                <input type="hidden" name="business" asp-for="Business">
                <input type="hidden" name="item_name" asp-for="Item_name">
                <input type="hidden" name="amount" asp-for="Amount">
                <input type="hidden" name="no_shipping" asp-for="No_shipping">
                <input type="hidden" name="return" asp-for="Return_url">
                <input type="hidden" name="rm" asp-for="Rm">
                <input type="hidden" name="notify_url" asp-for="Notify_url">
                <input type="hidden" name="cancel_return" asp-for="Cancel_url">
                <input type="hidden" name="currency_code" asp-for="Currency_code">
                <input type="hidden" name="custom" asp-for="Request_Id">
		    <button>
			    <img src="https://www.paypalobjects.com/webstatic/en_US/i/buttons/buy-logo-large.png" alt="Buy now with PayPal" />
		    </button>
		    </form>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

